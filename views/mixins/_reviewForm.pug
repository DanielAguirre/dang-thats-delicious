mixin reviewFOmr(store)
  form(action=`/reviews/${store._id}` method="POST")
    textarea(name="text" placeholder="Did you try this place? Hve something to say? Leave a review...")
    .reviewer__meta
      .reviewer__stars
        each num in [5,4,3,2,1]
          input(ttype="radio" required id=`star${num}` name="rating" value=num)
          label(for=`start${num}`) #{num} Starts
      input.button(type="submit" value="submit Review ->")
